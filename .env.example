# =================================
# Face Recognition Video Analyzer
# Environment Configuration
# =================================

# Face detection parameters
MIN_FACE_SIZE=150
FRAME_INTERVAL=10
UNIQUENESS_TOLERANCE=0.5
COMPARISON_TOLERANCE=0.6

# Directory structure
OUTPUT_FOLDER=face_captures
TEMP_FOLDER=temp
LOGS_FOLDER=logs

# Output files
ENCODINGS_FILE=face_encodings.json

# Processing configuration
MAX_WORKERS=4
BATCH_SIZE=100

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: CUDA/GPU acceleration
# Set to 'true' to use GPU if available
USE_GPU=false

# Optional: Advanced settings
# Maximum video resolution for processing (width in pixels)
MAX_VIDEO_WIDTH=1280

# Quality thresholds for face validation
MIN_CONTRAST=20
MIN_SHARPNESS=50

# Memory optimization
ENABLE_MEMORY_OPTIMIZATION=true
MAX_MEMORY_MB=2048